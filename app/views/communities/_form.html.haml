.group
  = f.label :name, t("activerecord.attributes.community.name", :default => "Name"), :class => :label
  = f.text_field :name, :class => 'text_field'   
.group
  = f.label :description, t("activerecord.attributes.community.description", :default => "Description"), :class => :label
  = f.text_area :description, :class => 'text_area'
.group
  = f.label :region, t("activerecord.attributes.community.region", :default => "Region"), :class => :label
  = f.select :region, ["NA","EUR","ASIA","JP"], :include_blank => true 
.group
  = f.label :code, t("activerecord.attributes.community.code", :default => "Community Code"), :class => :label
  = f.text_field :code, :class => 'text_field'
.group
  = f.label :race_type, t("activerecord.attributes.community.race_type", :default => "Race type"), :class => :label
  = f.select :race_type, ["50cc", "100cc", "150cc", "Balloon Battle", "Coin Runner"], :include_blank => true
.group
  = f.label :items_type, t("activerecord.attributes.community.items_type", :default => "Items type"), :class => :label
  = f.select :items_type, ["All Items", "Coins Only", "Bananas Only", "Mushrooms Only", "Bob-ombs Only", "No Item"], :include_blank => true  
.group          
  = f.label :view, t("activerecord.attributes.community.view", :default => "View Type"), :class => :label 
  = f.select :view, ["Public","Private"], :include_blank => true 
  %br
  %span.description Private communities are only seen my friends 

.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), communities_path, :class => "text_button_padding link_button"
