.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", comments_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_comment_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", comment_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.comment.content", :default => t("activerecord.labels.content", :default => "Content"))
          \:
        = @comment.content
      %p
        %b
          = t("activerecord.attributes.comment.community_id", :default => t("activerecord.labels.community_id", :default => "Community"))
          \:
        = @comment.community_id
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_comment_path(@comment), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), comment_path(@comment), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
